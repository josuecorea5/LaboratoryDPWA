@page
@model CitasSystem.Web.Pages.EditDoctorsModel
@{
}
<form method="post">
    <input type="hidden"  asp-for="Doctors.Id"/>
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Doctors.CodeNumber"></label>
        <input type="number" class="form-control" asp-for="Doctors.CodeNumber" placeholder="Ingrese su código">
        <span class="text-danger" asp-validation-for="Doctors.CodeNumber"></span>
    </div>
    <div class="form-group">
        <label asp-for="Doctors.Name"></label>
        <input type="text" class="form-control" asp-for="Doctors.Name" placeholder="Ingrese su nombre">
        <span class="text-danger" asp-validation-for="Doctors.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Doctors.LastName"></label>
        <input type="text" class="form-control" asp-for="Doctors.LastName" placeholder="Ingrese su apellido">
        <span class="text-danger" asp-validation-for="Doctors.LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Doctors.Specialty"></label>
        <input type="text" class="form-control" asp-for="Doctors.Specialty" placeholder="Ingrese su especialidad">
        <span class="text-danger" asp-validation-for="Doctors.Specialty"></span>
    </div>
    <div class="form-group">
        <label asp-for="Doctors.Schedule"></label>
        <input type="datetime" class="form-control" asp-for="Doctors.Schedule" placeholder="Ingrese su horario">
        <span class="text-danger" asp-validation-for="Doctors.Schedule"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button> <br />
    <a asp-page="/Doctores">Volver</a>
</form>