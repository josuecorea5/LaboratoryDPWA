@page
@model CitasSystem.Web.Pages.CitasModel
@{
}
<h1>Lista de Citas</h1>
<a class="btn btn-sm btn-success" asp-page="/CreateCitas">New Cita</a> <br /> <br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>ID Cita</th>
            <th>Name</th>
            <th>LastName</th>
            <th>Hours</th>
            <th>Code Hospital</th>
            <th>Code Doctor</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Citas)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.IdCita</td>
                <td>@item.Name</td>
                <td>@item.LastName</td>
                <td>@item.Hour</td>
                <td>@item.CodeHospital</td>
                <td>@item.CodeNumber</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-area="" asp-page="/EditCita" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-area="" asp-page="/DeleteCitas" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>